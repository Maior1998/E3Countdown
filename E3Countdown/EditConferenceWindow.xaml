<Window x:Class="E3Countdown.EditConferenceWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:E3Countdown"
        mc:Ignorable="d"
        Title="Конференция" FontSize="16" WindowStartupLocation="CenterScreen" Height="320" Width="400">
    <StackPanel>
        <Label Content="Название: " Margin="5"></Label>
        <TextBox x:Name="TbName" Margin="5"></TextBox>
        <Label Content="Начало: " Margin="5"></Label>
        <local:DateTimePicker x:Name="DtpStart" Margin="5"></local:DateTimePicker>
        <Label Content="Конец: " Margin="5"></Label>
        <local:DateTimePicker x:Name="DtpEnd" Margin="5"></local:DateTimePicker>
        <Button x:Name="btnSave" Content="Сохранить" Click="BtnSave_OnClick" Margin="5"></Button>
    </StackPanel>
</Window>
